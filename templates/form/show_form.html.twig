{% extends 'base.html.twig' %}

{% block title %}Ajouter une chambre{% endblock %}

{% block body %}

    {% if chambre is not defined %}
        <h1 class="text-center my-4">Ajouter une chambre</h1>
    {% else %}
        <h1 class="text-center my-4">Modifier une chambre</h1>
    {% endif %}

    <div class="row">
        <div class="col-8 mx-auto">

            {{ form_start(form) }}

                <div class="row">
                    <div class="col-6">{{ form_row(form.title) }}</div>
                    <div class="col-6">{{ form_row(form.subtitle) }}</div>
                </div>

                {{ form_row(form.description courte) }}

                {{ form_row(form.description longue) }}

                {{ form_row(form.titre) }}

                {{ form_row(form.date enregisrement) }}

                {{ form_row(form.tarif-journalier-nuite) }}

                {{ form_row(form.photo) }}

                 {{ form_row(form.action) }}

            {{ form_end(form) }}

        </div>
    </div>




{% endblock %}