{% extends 'base.html.twig' %}

{% block title %}Gestion des membres{% endblock %}

{% block body %}

    <h1 class="text-center my-4">Gestion des membres</h1>

    <div class="row">
        <div class="col-6 mx-auto">
            {% include 'include/_flashes.html.twig' %}
        </div>
    </div>

    <div class="row mx-auto">
        <div class="col-4"></div>
        <div class="col-4"><a href="#" class="btn btn-warning"><i class="fa fa-trash"></i> Voir les archives</a> </div>
    </div>

    <div class="row">
        <div class="col-10 mx-auto my-4">

            <h2 class="text-center">Liste des membres</h2>

            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Pseudo</th>
                    <th>Prenom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Civilite</th>
                    <th>Role</th>
                    <th>Crée le </th>
                    <th>Modifié le </th>
                    <th>Options</th>   
                </tr>
                </thead>
                <tbody>
                
                {% for membre in membres %} 
                <tr>
                 <td>{{ membre.id }}</td>
                 <td>{{ membre.pseudo }}</td>
                 <td>{{ membre.prenom }}</td>
                 <td>{{ membre.nom }}</td>
                 <td>{{ membre.email }}</td>
                 <td>{{ membre.civilite }}</td>
                 <td>{{ membre.roles | first}}</td>
                 <td>{{ membre.createdAt | date('d/m/Y')}}</td>
                 <td>{{ membre.updatedAt | date('d/m/Y')}}</td>
                  <td>
                            <a href="#" class="text-info" title="Modifier le membre"><i class="fa fa-edit"></i></a>
                            <a href="#" class="text-danger" title="Archiver le membre" onclick="return confirm('Voulez-vous archiver ce membre ?')"><i class="fa fa-trash"></i></a>
                        </td>
                 
                </tr>
                {% endfor %}



