{% extends 'base.html.twig' %}

{% block title %}Gestion des chambres{% endblock %}

{% block body %}
  <h1 class="text-center my-4">Tableau de bord des Chambres</h1>
    <div class="row">
        <div class="col-6 mx-auto">
            {% include 'include/_flashes.html.twig' %}
        </div>
    </div>

    <div class="row mx-auto">
        <div class="col-4"></div>
        <div class="col-4"><a href="{{ path('create_chambre') }}" class="btn btn-primary">Ajouter une chambre</a></div>
        <div class="col-4"><a href="{{ path('show_chambre_from_commande') }}" class="btn btn-primary"> Voir les chambres réservées</a> </div>
    </div>

    <div class="row">
        <div class="col-10 mx-auto my-4">

           

            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Description(courte)</th>
                    <th>Description(longue)</th>
                    <th>Photo</th>
                    <th>Prix(journalier/nuitée)</th>
                    <th>Date Enregistrement</th> 
                    <th>Modifié le</th> 
                    <th>Actions</th>   
                </tr>
                </thead>
                <tbody>
                
                {% for chambre in chambres %} 
                <tr>
                 <td>{{ chambre.id }}</td>
                 <td>{{ chambre.descriptionLongue}}</td>
                 <td>{{ chambre.descriptionCourte}}</td>
                 <td>{{ chambre.photo }}</td>
                 <td>{{ chambre.prixJournalier }}</td>
                 <td>{{ chambre.createdAt | date('d/m/Y')}}</td>
                 <td>{{ chambre.updatedAt | date('d/m/Y')}}</td>
                  <td>
                  {# ≈ <img src="{{ asset('uploads/' ~ chambre.photo) }}" class="img-custom" alt="{{chambre.descriptionCourte }}"> #}
                            <a href="#" class="text-info" title="Rechercher une chambre"><i class="fa fa-search"></i></a>
                            <a href="#" class="text-info" title="Modifier une chambre"><i class="fa fa-edit"></i></a>
                            <a href="#" class="text-danger" title="Supprimer une chambre" onclick="return confirm('Voulez-vous archiver ce slider ?')"><i class="fa fa-trash"></i></a>
                        </td>
                 
                </tr>
                {% endfor %}


                
                 <div class="row">
          <div class="col-6 mx-auto">
          
         
          <div class="row">
             <div class="col"></div>
           
          </div>
          

          </div>
     </div>


 {% endblock %}